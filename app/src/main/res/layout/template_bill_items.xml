<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/template_bill_holder"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <TextView
        android:id="@+id/template_bill_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginStart="2dp"
        android:maxWidth="150dp"
        android:minWidth="100dp"
        android:text="Name"
        android:textColor="@color/colorPrimaryTitle"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/template_bill_qty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toStartOf="@+id/template_bill_price"
        android:maxWidth="50dp"
        android:minWidth="40dp"
        android:text="qty"
        android:textColor="@color/colorPrimaryTitle"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/template_bill_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toStartOf="@+id/template_bill_pkgprice"
        android:maxWidth="100dp"
        android:minWidth="50dp"
        android:text="price"
        android:textColor="@color/colorPrimaryTitle"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/template_bill_pkgprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:maxWidth="100dp"
        android:minWidth="50dp"
        android:text="pkgPrice"
        android:textColor="@color/colorPrimaryTitle"
        android:textSize="16sp"
        android:textStyle="bold" />

</RelativeLayout>