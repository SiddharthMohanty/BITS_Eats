<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:layout_margin="2dp"
            android:padding="10dp"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/templateSelected_SubtractButton"
                android:layout_width="40dp"
                android:layout_height="32dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/subtract_button"
                android:padding="10dp"
                android:src="@drawable/ic_remove" />

            <TextView
                android:id="@+id/templateSelected_ItemName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Food Item"
                android:layout_marginEnd="5dp"
                android:layout_weight="5"
                android:textColor="@color/colorPrimaryTitle"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/templateSelected_nItems"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="n"
                android:textColor="@color/colorPrimaryTitle"
                android:textSize="16sp"
                android:layout_marginEnd="5dp"/>


            <TextView
                android:id="@+id/templateSelected_ItemPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:padding="5dp"
                android:text="Rs. "
                android:textColor="@color/colorPrimaryTitle"
                android:textSize="16sp" />

        </LinearLayout>

    </RelativeLayout>



</LinearLayout>